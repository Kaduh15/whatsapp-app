{
  "extends": [
    "next/core-web-vitals",
    "@rocketseat/eslint-config/react"
  ],
  "plugins": [
    "react",
    "@typescript-eslint",
    "react-hooks",
    "import-helpers"
  ],
  "rules": {
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          ["/^react/", "/^next/"],
          "module",
          "/^@shared/",
          "absolute",
          "/^components/",
          "/^pages/",
          "/utils/",
          "/constants/",
          "/^store/",
          "/^styles/",
          "/^templates/",
          ["parent", "sibling", "index"]
        ],
        "alphabetize": { "order": "asc", "ignoreCase": true }
      }
    ]
  }
}